{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"composite": true,
		"outDir": "dist"
	},
	"include": ["**/*.ts", "**/*.d.ts"],
	"exclude": ["node_modules", "dist"]
}